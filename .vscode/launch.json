    "version": "0.2.0",
    "configurations": [
        {
            "name": "examples",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "args": [
                "${workspaceRoot}/index.ts",
                "${workspaceRoot}/examples/awesome_message.proto",
                "${workspaceRoot}/examples/awesome_message.php"
            ],
        }
    ]
}